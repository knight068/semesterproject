<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myRecycler.TipsAndTricks"
    android:background="@color/LogInBackground">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTips"
        android:layout_marginTop="50dp"
        android:layout_above="@id/llBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llBottomNav"
        />
    <LinearLayout
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/llBottomNav"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/ribble_effect"
        android:padding="10dp"
        android:layout_marginTop="130dp">
        <LinearLayout
            android:id="@+id/llEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <ImageButton
                android:id="@+id/ibProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_profile_24"
                android:background="@color/LogInBackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"

            >
            <ImageButton
                android:id="@+id/ibBudget"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_calculate_24"
                android:background="@color/LogInBackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"

            >
            <ImageButton
                android:id="@+id/ibBills"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_bills_24"
                android:background="@color/LogInBackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bills"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"

            >
            <ImageButton
                android:id="@+id/ibTips"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_tips_and_tricks"
                android:background="@color/LogInBackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llReminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"


            >
            <ImageButton
                android:id="@+id/ibReminders"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_reminder_24"
                android:background="@color/LogInBackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remind"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>